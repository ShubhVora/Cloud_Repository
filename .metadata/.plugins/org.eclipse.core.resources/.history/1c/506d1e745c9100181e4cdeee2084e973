package com.techlabs.bankapp;

import java.util.ArrayList;

public class Bank {

	ArrayList<Manager> listOfManager = new ArrayList<Manager>();

	public void load() throws Exception {
		LoadFile load = new LoadFile();
		listOfManager = load.read();

	}

	public void addEmployee(Manager employee) {
		listOfManager.add(employee);
	}

	public void removeEmployee(Manager employee) {
		listOfManager.remove(employee);
	}

	public ArrayList<Manager> getManagerList() {
		return this.listOfManager;
	}

}
