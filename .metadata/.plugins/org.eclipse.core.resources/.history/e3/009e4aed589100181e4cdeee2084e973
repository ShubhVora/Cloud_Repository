package com.techlabs.bankapp;

import java.util.ArrayList;

public class Bank {

	ArrayList<Employee> listOfManager = new ArrayList<Employee>();

	public void load() throws Exception {
		LoadFile load = new LoadFile();
		listOfManager = load.read();

	}

	public void addEmployee(Employee employee) {
		listOfManager.add(employee);
	}

	public void removeEmployee(Employee employee) {
		listOfManager.remove(employee);
	}

	public ArrayList<Employee> getManagerList() {
		return this.listOfManager;
	}

}
