package com.techlabs.shoppingcart;

import java.util.Date;
import java.util.HashMap;
import java.util.Map;

public class Order {
	private static int orderId = 0;
	private Date date;
	private HashMap<Integer, LineItem> arrayListOfLineItem;

	public Order(LineItem line, Date date) {
		orderId++;
		this.date = date;
		this.arrayListOfLineItem.put(this.orderId, line);
	}

	public void addToCart() {

	}

	public void deleteFromCart(Product product, int Quantity) {

		for (Map.Entry<Integer, LineItem> entry : this.arrayListOfLineItem.entrySet()) {
			Product productOfLine = entry.getValue().getProduct();
			int QuantityOfLine = entry.getKey().getQuantity();
		}
	}

}
