package com.techlabs.shoppingcart;

import java.util.ArrayList;

public class PrintDetail {

	public void dispayCustomerOrder(Customer customer) {
		ArrayList<LineItem> cartProduct = customer.getOrder().getArrayListOfItemList();

		System.out.println("Product Name\tProductQuantity\t\tTotal Product Cost");
		for (LineItem lineItem : cartProduct) {
			System.out.println(lineItem.getProduct().getProductName() + "\t\t\t" + lineItem.getQuantity()
					+ "\t\t\tRs." + lineItem.calculateTotalProductCost());

		}
		System.out.println("Total cost of order:\tRs." + customer.getOrder().getTotalCost());
	}

}
