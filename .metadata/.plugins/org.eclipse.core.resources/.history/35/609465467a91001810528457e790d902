package com.techlabs.shoppingcart;

import java.util.ArrayList;

public class PrintDetail {

	public void dispayCustomerOrder(Customer customer) {
		ArrayList<LineItem> cartProduct = customer.getOrder().getArrayListOfItemList();

		System.out.println("Product Name\tProductQuantity");
		for (LineItem lineItem : cartProduct) {
			System.out.println(lineItem.getProduct() + "\t" + lineItem.getQuantity());

		}
	}

}
