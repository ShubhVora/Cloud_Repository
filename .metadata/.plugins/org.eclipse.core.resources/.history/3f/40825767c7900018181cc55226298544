package com.techlabs.bankapp;

import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;
import java.util.ArrayList;

import com.techlabs.bankapptest.Student;

public class LoadFile {

	public ArrayList<Employee> read() {

		ArrayList<Employee> listOfManager = new ArrayList<Employee>();

		ObjectInputStream in=new ObjectInputStream(new FileInputStream("Student.ser"));  
		listOfManager=(ArrayList<Employee>)in.readObject();
		 in.close();
		
		return listOfManager;
	}

	public void write(ArrayList<Employee> list) throws Exception {
		FileOutputStream fr = new FileOutputStream("EmployeeData.csv");
		ObjectOutputStream out = new ObjectOutputStream(fr);
		out.writeObject(list);
		out.close();
		fr.close();
	}

}