package com.techlabs.shoppingcart;

public class Customer {
	private String name, address;
	private int contact;
	private Order customerOrder;

	public Customer(String name, String address, int contact) {
		this.name = name;
		this.address = address;
		this.contact = contact;
		this.customerOrder = new Order();
	}

	public double placeCustomerOrder() {
		double totalCost = this.customerOrder.getTotalCost();
		return totalCost;

	}

	public void cancelCustomerOrder() {
		this.customerOrder = null;
	}

	public Order getOrder() {
		return this.customerOrder;
	}

}
